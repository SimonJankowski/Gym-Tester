<%layout("boilerplate")%>
    <div class="row">
        <h1 class="text-center">New Gym</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/gyms" method="POST" novalidate class="needs-validation"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="name">Gym name:</label>
                            <input class="form-control" type="text" id="name" name="gym[name]" required>
                            <div class="invalid-feedback">
                                Please provide a valid name.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location:</label>
                            <input class="form-control" type="text" id="location" name="gym[location]" required>
                            <div class="invalid-feedback">
                                Please provide a valid location.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="type">Gym type:</label>
                            <select class="form-select" type="select" id="type" name="gym[type]" required>
                                <option selected disabled value="">Choose...</option>
                                <option>Commercial Gym</option>
                                <option>Old school Gym</option>
                                <option>Posh fitness center</option>
                                <option>Multisport club</option>
                                <option>Outdoor Gym</option>
                                <option>Crossfit Box</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select type of gym.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="images" class="form-label">Add images</label>
                            <input class="form-control" type="file" id="images" name="image" multiple>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Price:</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" placeholder="0" aria-label="price"
                                    aria-describedby="price-label" id="price" name="gym[price]" required>
                                <div class="invalid-feedback">
                                    Please provide a valid price.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description:</label>
                            <textarea class="form-control" type="text" id="description" name="gym[description]"
                                required></textarea>
                            <div class="invalid-feedback">
                                Please select a valid state.
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-success">Add Gym</button>
                        </div>
                        <a href="/gyms">back to all gyms</a>
                    </form>
                </div>
            </div>
        </div>
    </div>